    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "--test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/tools/clues.js",
            "args": [ "-pf.71", "-t", "newton", "-v", "--fast" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cm xor.req",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/tools/clues.js",
            "args": [ "clues.js", "-pf.71", "-c2,15", "-x2",
//                "--xor", "us 50",
                "--xor", "koa",
                "--xor", "21",
                "--xor", "currant",
                "-v"
            ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug cm",
            "program": "/usr/local/bin/node",
            "cwd": "${workspaceFolder}/src/tools",
            "args": [ "clues.js", "-pf.71", "-c2,15", "-x2", "--xor", "us 50", "-v" ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug cm no --xor",
            "program": "/usr/local/bin/node",
            "cwd": "${workspaceFolder}/src/tools",
            "args": [ "clues.js", "-pf.71", "-c2,15", "-x2", "-v" ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug show-components",
            "program": "/usr/local/bin/node",
            "cwd": "${workspaceFolder}/src/tools",
            "args": [ "clues.js", "-pf.71", "-t", "newton", "-v" ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug cm xor.req",
            "program": "/usr/local/bin/node",
            "cwd": "${workspaceFolder}/src/tools",
            "args": [ "clues.js", "-pf.71", "-c2,2", "-x2",
//                "--xor", "us 50",
                "--xor", "koa",
                "--xor", "21",
                "--xor", "currant",
                "--or", "hobbit"
                "-v"
            ]
        }
    ]
}